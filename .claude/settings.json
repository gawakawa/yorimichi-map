{
  "language": "japanese",
  "alwaysThinkingEnabled": true,
  "statusLine": {
    "type": "command",
    "command": ".claude/statusline.sh",
    "padding": 0
  },
  "permissions": {
    "ask": [
      "Bash(gh pr create:*)",
      "Bash(tofu apply:*)"
    ],
    "deny": [
      "Bash(git add -A:*)",
      "Bash(git add --all:*)",
      "Bash(git add .:*)",
      "Bash(git add -u:*)",
      "Bash(git push:*)",
      "Bash(git commit --no-verify:*)",
      "Bash(git commit -n:*)"
    ]
  }
}
